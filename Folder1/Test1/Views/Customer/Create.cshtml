                    <span class = "text-danger" asp-validation-for="@Model.DTB"/>
                    </div>    
            </div>    
            
            <div class="form-group">    
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-2" })    
                <div class="col-md-10">    
